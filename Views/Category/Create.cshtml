@model Category
@{
    ViewData["Title"] = "Create";
}

@* <link rel="stylesheet" type="text/css" href="~/css/Category/category.css" /> *@



<div asp-validation-summary="All" id="validation-summary" class="validation-summary-errors  ">

</div>
<form method="post">
  <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control">
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="DisplayOrder" class="form-label"></label>
    <input asp-for="DisplayOrder" class="form-control">
    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
  <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Back To List</a>
</form>

@section Scripts{
  @{
    <partial name="_ValidationScriptsPartial"></partial>
  } 
}